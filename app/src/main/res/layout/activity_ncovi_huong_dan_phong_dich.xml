<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrangBenhNhan.NCOVI.HuongDanPhongDich">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorDefault"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDefault"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/title_HuongDanPhongDich"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBack_HuongDanPhongDich"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left|center"
            android:background="@color/colorDefault"
            android:src="@drawable/ic_back" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hinh1"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:background="@drawable/huongdanphongdich_1" />

            <ImageView
                android:id="@+id/hinh2"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:background="@drawable/huongdanphongdich_2" />

            <ImageView
                android:id="@+id/hinh3"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:background="@drawable/huongdanphongdich_3" />

            <ImageView
                android:id="@+id/hinh4"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:background="@drawable/huongdanphongdich_4" />

            <ImageView
                android:id="@+id/hinh5"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:background="@drawable/huongdanphongdich_5" />

            <ImageView
                android:id="@+id/hinh6"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:background="@drawable/huongdanphongdich_6" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>