<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/ScrollView_DangKy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_HoTen"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtHoTen_Fragment_BacSi_HoSoBacSi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit3"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_KhoaLamViec"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtKhoa_Fragment_BacSi_HoSoBacSi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit3"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_NgayThangNamSinh"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtNamSinh_Fragment_BacSi_HoSoBacSi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_NoiOHienTai"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtNoiOHienTai_Fragment_BacSi_HoSoBacSi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit3"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_QueQuan"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtQUeQuan_Fragment_BacSi_HoSoBacSi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit3"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_SoDienThoai"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edtSoDienThoai_Fragment_BacSi_HoSoBacSi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit3"
                    android:gravity="center_vertical"
                    android:inputType="phone|number"
                    android:padding="5dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnDangKy_DangKy_BenhNhan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:background="@drawable/button2"
                android:text="@string/title_CapNhat"
                android:textColor="#ffff"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>