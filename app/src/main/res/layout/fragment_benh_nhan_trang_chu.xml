<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:id="@+id/ScrollView_TrangChu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#AAAA">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorDefault" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNCOVI"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:text="@string/title_NCOVI"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtDangKiKhamBenh"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:text="@string/title_DangKyKhamBenh"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHuongDanSoCapCuu"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:text="@string/title_HuongDanSoCapCuu"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtChatVoiBacSi"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:text="@string/title_ChatVoiBacSi"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPhanAnh"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:text="@string/title_PhanAnh"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>