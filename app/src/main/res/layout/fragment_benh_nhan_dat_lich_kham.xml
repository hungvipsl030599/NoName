<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/title_KhoaKhamBenh"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/spKhoaKhamBenh_BenhNhan_DatLichKham"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/title_BacSi"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/spChonBacSi_BenhNhan_DatLichKham"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/title_ChonNgayGio"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNgay_BenhNhan_DatLichKham"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit3"
                    android:padding="5dp"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txtGio_BenhNhan_DatLichKham"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit3"
                    android:padding="5dp"
                    android:textSize="25dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnDatLich_BenhNhan_DatLichKham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:background="@drawable/edit2"
                android:textColor="#fff"
                android:text="@string/title_DatLichKham" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>